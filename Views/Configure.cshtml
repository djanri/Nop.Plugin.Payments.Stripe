@model Nop.Plugin.Payments.Stripe.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}
@inject Nop.Core.IWebHelper webHelper

<script>
    $(document).ready(function () {
  
    });

</script>

<form asp-controller="PaymentStripe" asp-action="Configure" method="post">
    <div class="container-fluid">
        <div class="card card-default">
            <div class="card-body">

                <div class="form-group row" id="SecretKey">
                    <div class="col-md-3">
                        <nop-label asp-for="SecretKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="SecretKey" asp-required="true" />
                        <span asp-validation-for="SecretKey"></span>
                    </div>
                </div>

                <div class="form-group row" id="PublishableKey">
                    <div class="col-md-3">
                        <nop-label asp-for="PublishableKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="PublishableKey" asp-required="true" />
                        <span asp-validation-for="PublishableKey"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="AdditionalFee" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AdditionalFee" />
                        <span asp-validation-for="AdditionalFee"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="AdditionalFeePercentage" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AdditionalFeePercentage" />
                        <span asp-validation-for="AdditionalFeePercentage"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="IsIndividualByVendor" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="IsIndividualByVendor" />
                        <span asp-validation-for="IsIndividualByVendor"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn btn-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>